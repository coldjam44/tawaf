{
	"info": {
		"_postman_id": "project-content-block-images-api",
		"name": "Project Content Block Images API",
		"description": "API collection for managing images in project content blocks",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get All Images",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/projects/{{project_id}}/content-blocks/{{block_id}}/images",
					"host": ["{{base_url}}"],
					"path": ["api", "projects", "{{project_id}}", "content-blocks", "{{block_id}}", "images"]
				},
				"description": "Get all images for a specific content block"
			}
		},
		{
			"name": "Upload Images",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "images[]",
							"type": "file",
							"src": []
						},
						{
							"key": "title_ar",
							"value": "عنوان الصورة",
							"type": "text"
						},
						{
							"key": "title_en",
							"value": "Image Title",
							"type": "text"
						},
						{
							"key": "description_ar",
							"value": "وصف الصورة",
							"type": "text"
						},
						{
							"key": "description_en",
							"value": "Image Description",
							"type": "text"
						},
						{
							"key": "order",
							"value": "0",
							"type": "text"
						},
						{
							"key": "is_active",
							"value": "1",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{base_url}}/api/projects/{{project_id}}/content-blocks/{{block_id}}/images",
					"host": ["{{base_url}}"],
					"path": ["api", "projects", "{{project_id}}", "content-blocks", "{{block_id}}", "images"]
				},
				"description": "Upload new images to a content block"
			}
		},
		{
			"name": "Get Single Image",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/projects/{{project_id}}/content-blocks/{{block_id}}/images/{{image_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "projects", "{{project_id}}", "content-blocks", "{{block_id}}", "images", "{{image_id}}"]
				},
				"description": "Get details of a specific image"
			}
		},
		{
			"name": "Update Image",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"title_ar\": \"عنوان محدث\",\n    \"title_en\": \"Updated Title\",\n    \"description_ar\": \"وصف محدث\",\n    \"description_en\": \"Updated Description\",\n    \"order\": 1,\n    \"is_active\": true\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/projects/{{project_id}}/content-blocks/{{block_id}}/images/{{image_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "projects", "{{project_id}}", "content-blocks", "{{block_id}}", "images", "{{image_id}}"]
				},
				"description": "Update image details"
			}
		},
		{
			"name": "Delete Image",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/projects/{{project_id}}/content-blocks/{{block_id}}/images/{{image_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "projects", "{{project_id}}", "content-blocks", "{{block_id}}", "images", "{{image_id}}"]
				},
				"description": "Delete a specific image"
			}
		},
		{
			"name": "Toggle Image Status",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/projects/{{project_id}}/content-blocks/{{block_id}}/images/{{image_id}}/toggle",
					"host": ["{{base_url}}"],
					"path": ["api", "projects", "{{project_id}}", "content-blocks", "{{block_id}}", "images", "{{image_id}}", "toggle"]
				},
				"description": "Toggle image active/inactive status"
			}
		},
		{
			"name": "Update Images Order",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"image_orders\": [1, 2, 3, 4]\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/projects/{{project_id}}/content-blocks/{{block_id}}/images/update-order",
					"host": ["{{base_url}}"],
					"path": ["api", "projects", "{{project_id}}", "content-blocks", "{{block_id}}", "images", "update-order"]
				},
				"description": "Update the order of images in a content block"
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "https://realestate.azsystems.tech"
		},
		{
			"key": "project_id",
			"value": "2"
		},
		{
			"key": "block_id",
			"value": "5"
		},
		{
			"key": "image_id",
			"value": "1"
		}
	]
}
